//
// Hiking_LookInPlaceForUnknown
// Use the memory map to clear up the unknown areas we have within our reach.
//
//
//
//
{
  "behaviorClass": "LookInPlaceMemoryMap",
  "behaviorID": "Hiking_LookInPlaceForUnknown",

  "params":
  {
    "bodyTurnSpeed_degPerSec": 180,
    "headTurnSpeed_degPerSec":  90,
    "bodyAngleFromSectorCenterRangeMin_deg": 0.0,
    "bodyAngleFromSectorCenterRangeMax_deg": 5.0,
    "t1_headAngleAbsRangeMin_deg": -15.0,
    "t1_headAngleAbsRangeMax_deg": -10.0,
    "t2_headAngleAbsRangeMin_deg":  -5.0,
    "t2_headAngleAbsRangeMax_deg":   5.0,
    
    // we want to visit at least this many, but then we can give up for something else
    "prioritySectorCount": 3,
    "lowPriorityScoreReduction" : 1.0, // this is to counter the +1 that the activity gives us while running
    
    // previous location config
    "distanceThresholdForLocations_mm" : 30.0,
    "maxPreviousLocationCount" : 3,
    
    "lookInPlaceAnimTrigger": "HikingLookAround"
  }
}
