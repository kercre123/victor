{
  "behaviorClass": "ReactToVoiceCommand",
  "behaviorID": "OnboardingTriggerWord",

  "associatedActiveFeature": "NoFeature",
  "behaviorStatToIncrement": "ReactedToTriggerWord",

  "notifyOnWifiErrors": {
    "recentOccurrence": {
      // trigger error notification immediately
      "numberOfTimes": 1
      // seconds don't matter with numberOfTimes = 1
      // "amountOfSeconds": 300.0
    }
  },
  
  "notifyOnCloudErrors": {
    "recentOccurrence": {
      // trigger error notification immediately
      "numberOfTimes": 2,
      "amountOfSeconds": 60.0
    }
  },

  "earConAudioEventBegin"   : "Play__Robot_Vic_Sfx__Wake_Word_On",
  "earConAudioEventSuccess" : "Play__Robot_Vic_Sfx__Wake_Word_Success",
  "backpackLights"          : true,

  "behaviorOnIntent"        : "ReactToTriggerDirectionAwake",
  
  "exitAfterListeningIfNotStreaming" : true,

  // this is the reason there is a separate onboarding trigger word instance. since the parent
  // controls the response to the trigger word, we don't want BehaviorReactToVoiceCommand to 
  // push another response on top of that
  "pushResponse"            : false
}
