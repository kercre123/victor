#include "Foo.clad"
#include "Bar.clad"
#include "ExplicitUnion.clad"
#include "ExplicitAutoUnion.clad"

namespace Baz {
  message Dog {
    AnkiTypes::AnkiEnum a,
    int_8 b
  }
} // namespace Baz

enum uint_32 LEDColor {
  CurrentColor = 0xffffffff,
  Color1 = 0x7,
}

message SoManyStrings {
  string   varStringBuff[uint_16],
  string   fixedStringBuff[3],
  string[uint_16] anotherVarStringBuff[uint_8],
  string[uint_8] anotherFixedStringBuff[2]
}

message od432 {
  Foo aFoo,
  int_8 otherByte,
  LEDColor color,
}

message od433 {
  Foo a[uint_16],
  Foo b[2],
  int_8 otherByte
}

message od434 {
  uint_64 vehiclesPlayed[uint_64]
}

structure Trip {
  string destination,
  int_32 price
}

message od217One {
  Trip plans,
  int_16 count
}

message od217Two {
  int_32 employeeId,
  Trip travels[uint_16]
}

namespace Cat {
  union MyMessage {
    Foo myFoo = 31,
    Bar myBar = 1,
    Baz::Dog myDog, // 2
    SoManyStrings mySoManyStrings = 0,
    od432 myOD432 = 254
  }
} // namespace Cat

