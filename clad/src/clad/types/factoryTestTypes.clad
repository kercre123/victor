}

message FactoryTestResultEntry {
  uint_64 utcTime,
  uint_32 engineSHA1,
  uint_32 timestamps[18],
  int_32 stationID,
  FactoryTestResultCode result,
}

structure CalibMetaInfo {
  uint_8 dotsFoundMask    // bit mask for which calibration images had dots found
}

structure IMUInfo {
  float_32 driftRate_degPerSec
}

structure CliffSensorValue {
  uint_16 val
}

structure PoseData {
  float_32 angleX_rad,
  float_32 angleY_rad,
  float_32 angleZ_rad,
  float_32 transX_mm,
  float_32 transY_mm,
  float_32 transZ_mm,
}


} // namespace Cozmo
} // namespace Anki
